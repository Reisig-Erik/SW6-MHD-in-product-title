<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Services -->
        <service id="LebensmittelMhdManager\Service\MhdDateParser" />

        <service id="LebensmittelMhdManager\Service\MhdCustomFieldSynchronizer">
            <argument type="service" id="LebensmittelMhdManager\Service\MhdDateParser"/>
        </service>

        <service id="LebensmittelMhdManager\Service\ProductTitleUpdater" />
        
        <service id="LebensmittelMhdManager\Service\ProductDescriptionUpdater" />
        
        <service id="LebensmittelMhdManager\Service\SingleEanManager">
            <argument type="service" id="product.repository"/>
            <argument type="service" id="LebensmittelMhdManager\Service\ProductDescriptionUpdater"/>
            <argument type="service" id="logger"/>
        </service>

        <!-- Event Subscribers -->
        <service id="LebensmittelMhdManager\Subscriber\ProductSubscriber">
            <argument type="service" id="product.repository"/>
            <argument type="service" id="LebensmittelMhdManager\Service\MhdDateParser"/>
            <argument type="service" id="LebensmittelMhdManager\Service\MhdCustomFieldSynchronizer"/>
            <argument type="service" id="LebensmittelMhdManager\Service\ProductTitleUpdater"/>
            <argument type="service" id="LebensmittelMhdManager\Service\ProductDescriptionUpdater"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="logger"/>
            <tag name="kernel.event_subscriber"/>
        </service>
        
        <service id="LebensmittelMhdManager\Subscriber\StockMovementSubscriber">
            <argument type="service" id="product.repository"/>
            <argument type="service" id="LebensmittelMhdManager\Service\MhdDateParser"/>
            <argument type="service" id="logger"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <!-- Rules for Dynamic Product Groups / Rule Builder -->
        <service id="LebensmittelMhdManager\Core\Rule\LineItemMhdDateRule">
            <tag name="shopware.rule.definition"/>
        </service>

        <!-- Console Commands -->
        <service id="LebensmittelMhdManager\Command\SyncMhdDatesCommand">
            <argument type="service" id="product.repository"/>
            <argument type="service" id="LebensmittelMhdManager\Service\MhdCustomFieldSynchronizer"/>
            <tag name="console.command"/>
        </service>
    </services>
</container>