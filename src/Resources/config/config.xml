<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/platform/trunk/src/Core/System/SystemConfig/Schema/config.xsd">

    <card>
        <title>MHD Manager Settings</title>
        <title lang="de-DE">MHD Manager Einstellungen</title>

        <input-field type="multi-select">
            <name>enabledSalesChannels</name>
            <label>Enable for Sales Channels</label>
            <label lang="de-DE">Für Verkaufskanäle aktivieren</label>
            <placeholder>Select sales channels...</placeholder>
            <placeholder lang="de-DE">Verkaufskanäle auswählen...</placeholder>
            <helpText>Select the sales channels where MHD management should be active. Leave empty to enable for all channels.</helpText>
            <helpText lang="de-DE">Wählen Sie die Verkaufskanäle aus, für die die MHD-Verwaltung aktiv sein soll. Leer lassen, um für alle Kanäle zu aktivieren.</helpText>
            <options>
                <option>
                    <id>all</id>
                    <name>All Sales Channels</name>
                    <name lang="de-DE">Alle Verkaufskanäle</name>
                </option>
            </options>
        </input-field>
    </card>
</config>